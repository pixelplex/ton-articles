{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@modules": ["./modules"],
      "@modules/*": ["./modules/*"]
    }
  }
}
